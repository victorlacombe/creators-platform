{
  "manifest_version": 2,
  "name": "Recll",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["css_file_chrome.css"],
      "run_at": "document_end"

    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "recll-logo.png"
  }
}
