<div class="wrapper-log" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('<%= image_url "log_background.png"%>')">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-login">
          <h1>My account</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
                  <%= f.input :email, required: true, autofocus: true, disabled: true %>
                  <p class="text-justify">Your email address is linked to your Google Account, you cannot change it here.</p>
                  <p>You can edit the permissions from your Google Account:</p>
                  <%= link_to "https://myaccount.google.com/permissions", target: "_blank", class: "btn btn-permissions" do %>
                    <i class="fab fa-google"></i> Manage permissions
                  <% end -%>

            </div>

          <% end %>

            <h3>Cancel my account</h3>

            <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

            <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
</div>


