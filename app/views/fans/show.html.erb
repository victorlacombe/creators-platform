<div class="container">
    <div class="header">
      <a href="#" class="btn-tab">Back to my fans</a>
    </div>
  <div class="content">
    <div class="left-card">
      <%= image_tag "julie.jpg", class: "avatar-large" %>
      <p>Julie Walt</p>
      <p class="pseudo">@juwalt</p>
      <p class="followers">520 Followers</p>
      <p class="last-msg">Last message 2 days ago</p>
      <%= simple_form_for @memo do |f|%>
      <%= f.input :content%>
      <%= f.submit %>
<% end %>
    </div>
